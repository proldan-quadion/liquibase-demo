			<plugin>
		        <groupId>org.liquibase</groupId>
		        <artifactId>liquibase-maven-plugin</artifactId>
		        <version>3.8.4</version>
		        <configuration>                  
		            <propertyFile>src/main/resources/liquibase/config/liquibase-${build.profile.id}.properties</propertyFile>
		            <promptOnNonLocalDatabase>false</promptOnNonLocalDatabase>
		        </configuration>
		        <executions>
	                <execution>
	                    <phase>process-resources</phase>
	                </execution>
	            </executions>
		        <dependencies>
